generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @unique @default(cuid())
  username String @unique
  email    String @unique
  password String

  @@index([id, email])
  @@map("user")
}

model Campground {
  id          String   @unique @default(cuid())
  title       String
  location    String
  image       String?
  price       Int
  description String
  reviews     Review[]

  @@index([id])
  @@map("campground")
}

model Review {
  id            String      @unique @default(cuid())
  body          String
  rating        Int
  campground    Campground? @relation(fields: [campground_id], references: [id], onDelete: Cascade)
  campground_id String?

  @@index([id, rating])
  @@map("review")
}
