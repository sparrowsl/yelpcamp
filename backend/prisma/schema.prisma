// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      String    @unique @default(cuid())
  first   String
  last    String
  address Address[]

  @@index([id])
  @@map("users")
}

model Address {
  id      String  @unique @default(cuid())
  city    String
  state   String?
  country String
  street  String?

  user    User?   @relation(fields: [user_id], references: [id])
  user_id String?

  @@index([id, city])
  @@map("addresses")
}

model Campground {
  id          String   @unique @default(cuid())
  title       String
  location    String
  image       String?
  price       Int
  description String
  reviews     Review[]

  @@index([id])
  @@map("campgrounds")
}

model Review {
  id            String      @unique @default(cuid())
  body          String
  rating        Int
  campground    Campground? @relation(fields: [campground_id], references: [id], onDelete: Cascade)
  campground_id String?

  @@index([id, rating])
  @@map("reviews")
}
